<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #272823; -fx-padding: 20;" styleClass="game-root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.TYPERUSH.GameController">
    <Pane prefHeight="160.0" prefWidth="1200.0" styleClass="race-track">
        <children>
            <Label layoutX="1150.0" layoutY="30.0" style="-fx-font-size: 60px;" text="ðŸ" />
            <StackPane fx:id="carContainer" layoutX="40.0" layoutY="40.0" styleClass="car-glow">
                <ImageView fitWidth="120.0" fitHeight="70.0" preserveRatio="true">
                    <image><Image url="@car.png" /></image>
                </ImageView>
            </StackPane>
        </children>
    </Pane>

    <!-- TextFlow for block highlighting -->
    <TextFlow fx:id="targetTextFlow" maxWidth="1050" minHeight="150" textAlignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.5); -fx-padding: 20; -fx-background-radius: 15;"/>

    <TextField fx:id="inputField" onKeyReleased="#handleTyping" prefHeight="70.0" maxWidth="850.0" styleClass="typing-input" />

    <HBox alignment="CENTER" spacing="70.0">
        <Label fx:id="wpmLabel" styleClass="stat-text" text="WPM: 0" />
        <Label fx:id="accuracyLabel" styleClass="stat-text" text="Accuracy: 100%" />
        <Label fx:id="levelLabel" styleClass="stat-text" text="Level: Manual Mode" />
    </HBox>

    <VBox alignment="CENTER" spacing="5">
        <ImageView fx:id="handGuideView" fitHeight="220.0" fitWidth="500.0" preserveRatio="true" />
    </VBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="NEW RACE" onAction="#resetGame" styleClass="btn-premium"/>
        <Button text="VIEW PROFILE" onAction="#goToProfile" styleClass="btn-signup"/>
    </HBox>
</VBox>