<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="game-root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.TYPERUSH.GameController">

    <!-- Car Track Area -->
    <Pane prefHeight="200.0" prefWidth="1100.0" style="-fx-background-color: rgba(0,0,0,0.3); -fx-background-radius: 20;">
        <children>
            <Rectangle fx:id="trackLine" arcHeight="5.0" arcWidth="5.0" fill="#ffffff33" height="2.0" layoutY="100.0" width="1100.0" />
            <StackPane fx:id="carContainer" layoutX="20.0" layoutY="60.0">
                <Label style="-fx-font-size: 40px;" text="ðŸŽï¸" />
            </StackPane>
        </children>
    </Pane>

    <!-- Text Display Area -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 30;">
        <Label fx:id="targetLabel" styleClass="target-text" text="Loading text..." wrapText="true" maxWidth="1000"/>
        <TextField fx:id="inputField" onKeyReleased="#handleTyping" prefHeight="60.0" maxWidth="800.0" promptText="Start typing here..." styleClass="typing-input" />
    </VBox>

    <!-- Stats Area -->
    <HBox alignment="CENTER" spacing="50.0">
        <Label fx:id="wpmLabel" styleClass="stat-text" text="WPM: 0" />
        <Label fx:id="accuracyLabel" styleClass="stat-text" text="Accuracy: 100%" />
        <Label fx:id="levelLabel" styleClass="stat-text" text="Level: 1 (Easy)" />
    </HBox>

    <Button text="Restart Game" onAction="#resetGame" styleClass="restart-btn"/>
</VBox>