<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane styleClass="login-root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.TYPERUSH.LoginController">
    <children>
        <!-- Main Login Card -->
        <VBox alignment="CENTER" maxWidth="550.0" spacing="45.0" styleClass="login-card">
            <children>

                <!-- Header Section -->
                <VBox alignment="CENTER" spacing="12.0">
                    <children>
                        <Text styleClass="login-title" text="TYPERUSH" />
                        <Label style="-fx-text-fill: #888888; -fx-font-size: 15px; -fx-letter-spacing: 3px; -fx-font-weight: bold;" text="MASTER THE ART OF SPEED" />
                    </children>
                </VBox>

                <!-- Input Fields Section -->
                <VBox spacing="25.0">
                    <children>
                        <!-- Username Field -->
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-text-fill: #cccccc; -fx-font-size: 13px; -fx-font-weight: bold;" text="USERNAME" />
                                <TextField fx:id="usernameField" prefHeight="55.0" promptText="Enter your username" styleClass="login-input" />
                            </children>
                        </VBox>

                        <!-- Password Field -->
                        <VBox spacing="10.0">
                            <children>
                                <Label style="-fx-text-fill: #cccccc; -fx-font-size: 13px; -fx-font-weight: bold;" text="PASSWORD" />
                                <PasswordField fx:id="passwordField" prefHeight="55.0" promptText="Enter your password" styleClass="login-input" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="25.0">
                    <children>
                        <Button onAction="#handleLogin" prefHeight="55.0" prefWidth="190.0" styleClass="btn-login" text="LOGIN" />
                        <Button onAction="#handleSignup" prefHeight="55.0" prefWidth="190.0" styleClass="btn-signup" text="SIGNUP" />
                    </children>
                </HBox>

                <!-- Status Message Area -->
                <Label fx:id="statusLabel" styleClass="status-msg" text="" />

            </children>
            <padding>
                <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
            </padding>
        </VBox>
    </children>
</StackPane>