<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30.0" styleClass="root" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.TYPERUSH.LoginController">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Text styleClass="title-text" text="TYPERUSH DASHBOARD" />

    <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-background-radius: 20; -fx-padding: 40;">
        <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Username" />
        <TextField fx:id="usernameField" prefHeight="40.0" promptText="Enter your username" style="-fx-background-radius: 10;" />

        <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Password" />
        <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Enter your password" style="-fx-background-radius: 10;" />

        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#handleLogin" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="LOGIN" />
            <Button onAction="#handleSignup" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;" text="SIGNUP" />
        </HBox>

        <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" text="" />
    </VBox>
</VBox>